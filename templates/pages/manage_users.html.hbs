<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Linkr</title>

  <style>
    th,
    td {
      border: 1px solid;
    }

    th {
      font-weight: bold;
    }
  </style>
</head>

<body>

  {{> partials/header }}

  <div id="manage">
    <h1>Manage Users</h1>
    <a href="/new_user">Create New User</a>
    <div id="manage-table">
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Username</th>
            <th>Permissions</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#each users}}
          <tr id="{{id}}-row">
            <td id="{{id}}-id">{{id}}</td>
            <td id="{{id}}-name">{{username}}</td>
            <td>
              <input type="checkbox" id="{{id}}-permission-links" name="manage_links" value="true"
                onclick="updatePermissions({{id}})" {{#if manage_links}} checked {{/if}}>
              <label for="manage_links">Manage All Links</label><br />

              <input type="checkbox" id="{{id}}-permission-users" name="manage_users" value="true"
                onclick="updatePermissions({{id}})" {{#if manage_users}} checked {{/if}}>
              <label for="manage_users">Manage All Users</label><br />
            </td>
            <td>
              <button id="{{id}}-delete" onclick="removeByID('{{id}}')">Delete</button>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>

    <span id="manage-output"> </span>
  </div>
  <script type="text/javascript" src="/resource/users_table.js"></script>
</body>

</html>
